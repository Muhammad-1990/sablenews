     <!-- Bookmarks Feed -->
        <div class="w-full h-full flex-shrink-0 overflow-y-auto px-4">
            <div class="grid grid-cols-1 gap-4 pt-4">
                <template x-for="post in bookmarkedPosts" :key="post.Id">
                    <div
                        class="bg-white/10 rounded-lg overflow-hidden shadow-md transform-gpu transition hover:scale-[1.02]">
    
                        <!-- Image -->
                        <img :src="post.meta?.image" class="w-full h-40 object-cover" />
    
                        <!-- Content -->
                        <div class="p-4 flex justify-between items-center">
                            <h3 class="text-sm font-semibold text-white truncate" x-text="post.Title"></h3>
    
                            <!-- Bookmark toggle -->
                            <button @click.stop="toggleBookmark(post.Id)"
                                class="ml-2 p-2 rounded-full bg-white/10 transition-transform duration-200 active:scale-90"
                                :class="{ 'text-yellow-400': isBookmarked(post.Id) }">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        :class="{ 'fill-yellow-400 stroke-yellow-400': isBookmarked(post.Id) }"
                                        d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>


        <main class="h-screen scrollbar-hide"
        :class="{'overflow-y-scroll': !showArticle && !dragging,'overflow-y-hidden overflow-hidden': showArticle}"
        @touchstart="startX = $event.touches[0].clientX"
      @touchend="
        let delta = $event.changedTouches[0].clientX - startX;
        if (delta > 50) activeFeed = 'Featured';
        if (delta < -50) activeFeed = 'Bookmarks';
      ">